<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/booking_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/rounded_bottom_sheet"
    >
    <FrameLayout
        android:layout_gravity="top"
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bottom_sheet_line"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/check_for_booking"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:text="Booking Done "/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2km from you"
                android:fontFamily="@font/montserrat_medium"
                android:layout_gravity="end"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16px"
                >
                <TextView
                    android:id="@+id/date_for_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="07/04"
                    android:layout_alignParentStart="true"

                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/time_for_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:text="10 am"/>
                <TextView
                    android:id="@+id/dog_walker_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BbfCare"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="18sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/dog_walker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="Amanda Foster,28"/>
            <TextView
                android:id="@+id/dog_walker_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="***** 5"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="20sp">
                <ImageView
                    android:id="@+id/dog_walker_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dog"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/dog_walker_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12sp"
                    android:text="$12.30"/>
                <TextView
                    android:id="@+id/dog_walker_comapny_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"

                    android:text="BbfCare"/>
                <TextView
                    android:id="@+id/regular_walking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="18sp"

                    android:text="Regular Walking"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
